@model DirectFerries.Models.UserDetailViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2>Getting started Enter your Full Name, and Date Of Birth</h2>
        <p>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group row">
                    <label class="col-lg-2" for="FirstName">Enter First Name</label>
                    @Html.TextBox("FirstName", "", new { @class = "col-lg-10" })
                </div>
                <div class="form-group row">
                    <label class="col-lg-2" for="LastName">Enter Last Name</label>
                    @Html.TextBox("LastName", "", new { @class = "col-lg-10" })
                </div>
                <div class="form-group row">
                    <label class="col-lg-2" for="DateOfBirth">Enter Date Of Birth</label>
                    @Html.TextBox("DateOfBirth", "", new { @class = "col-lg-10", @id = "DateOfBirth", @placeholder = "YYYY-MM-dd" })
                </div>
                <div><hr /></div>
                <div class="row">
                    <input type="submit" class="btn-primary col-lg-offset-2" value="Submit" />
                </div>
            }
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#DateOfBirth").datepicker("option", "dateFormat", "yy-mm-dd");
    });
</script>
